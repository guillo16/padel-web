<div class="bg-white shadow-md rounded-lg px-4 py-6 md:px-8 md:py-8">
  <%= form_for(@event) do |f| %>
  <div class="mb-6">
    <%= f.label :title, class: "font-medium" %>
    <%= f.text_field :title, class: "rounded-lg w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm sm:text-md" %>
    <% if @event.errors.any? %>
    <p class="text-red-500"><%= @event.errors.full_messages_for(:title).join(', ') %></p>
    <% end %>
  </div>
   <div class="mb-6">
    <%= f.label :subtitle, class: "font-medium" %>
    <%= f.text_field :subtitle, class: "rounded-lg w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm sm:text-md" %>
    <% if @event.errors.any? %>
    <p class="text-red-500"><%= @event.errors.full_messages_for(:subtitle).join(', ') %></p>
    <% end %>
  </div>
    <div class="mb-6">
    <%= f.label :date, class: "font-medium" %>
    <%= f.date_field :date, class: "rounded-lg w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm sm:text-md" %>
    <% if @event.errors.any? %>
    <p class="text-red-500"><%= @event.errors.full_messages_for(:date).join(', ') %></p>
    <% end %>
  </div>
  <div class="pb-6">
    <%= f.label :photo, class: "font-medium" %>
    <%= f.text_field :photo, class: "rounded-lg w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm sm:text-md" %>
    <% if @event.errors.any? %>
    <p class="text-red-500"><%= @event.errors.full_messages_for(:photo).join(', ') %></p>
    <% end %>
  </div>
  <div class="pb-6">
    <%= f.label :description, class: "font-medium" %>
    <%= f.text_area :description, size: "60x10", class: "rounded-lg w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 text-sm sm:text-md" %>
    <% if @event.errors.any? %>
    <p class="text-red-500"><%= @event.errors.full_messages_for(:description).join(', ') %></p>
    <% end %>
  </div>
  <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
    Enviar
  </button>
  <% end %>
</div>
