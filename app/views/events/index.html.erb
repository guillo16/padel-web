<div class="container mx-auto px-4">
  <h2 class="py-16 text-xl md:text-4xl lg:text-5xl font-bold text-center">Eventos</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 gap-4">
    <% @events.each do |event| %>
    <%= link_to event_path(event) do  %>
      <%= render 'cards/event_card', event: event %>
    <% end %>
    <% end %>
  </div>
</div>
